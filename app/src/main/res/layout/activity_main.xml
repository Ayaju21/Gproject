<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3E5F5">

    <!-- User Account Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/userAccountSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <!-- Profile Image -->
            <ImageView
                android:id="@+id/userProfileImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/user"
                android:contentDescription="User Profile Image"
                android:scaleType="centerCrop" />

            <!-- User Name -->
            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textColor="#5C2E91"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="1" />

            <!-- Location and Notification Icons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/locationIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/location"
                    android:contentDescription="Location Icon"
                    android:layout_marginEnd="12dp"/>

                <ImageView
                    android:id="@+id/notificationBell"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/bell"
                    android:contentDescription="Notification Bell"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Date and Hours Section -->
    <LinearLayout
        android:id="@+id/dateHoursSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/userAccountSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/dateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="May, 2024"
            android:textColor="#5C2E91"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/hoursText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="21:10:07 Hours"
            android:textColor="#5C2E91"
            android:textSize="26sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/hoursProgress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:progress="70"
            android:progressTint="#5C2E91" />
    </LinearLayout>

    <!-- Attendance Summary Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/attendanceSummaryCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#EDE7F6"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/dateHoursSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <GridLayout
            android:id="@+id/attendanceGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:padding="12dp"
            android:alignmentMode="alignMargins"
            android:rowCount="3">

            <!-- Month Days -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="3dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/txtMonthDays"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Month Days\n31"
                        android:textColor="#5C2E91"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/month"
                        app:tint="#5C2E91" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Present Days -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="3dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/txtPresentDays"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Present Days\n2"
                        android:textColor="#5C2E91"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/present"
                        app:tint="#5C2E91" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Absent Days -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="3dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/txtAbsentDays"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Absent Days\n7"
                        android:textColor="#5C2E91"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/absent"
                        app:tint="#5C2E91" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Attendance Card View for Bad Records -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:minHeight="100dp"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="10dp">

                    <TextView
                        android:id="@+id/txtBadRecords"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Bad Records\n1"
                        android:textColor="#5C2E91"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/bad"
                        app:tint="#5C2E91" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Attendance Card View for Leaves -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:minHeight="100dp"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="10dp">

                    <TextView
                        android:id="@+id/txtLeaves"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Leaves\n0"
                        android:textColor="#5C2E91"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/leaves"
                        app:tint="#5C2E91" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Attendance Card View for Holidays -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:minHeight="100dp"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="10dp">

                <TextView
                    android:id="@+id/txtHolidays"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Holidays\n0"
                    android:textColor="#5C2E91"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/holiday"
                    app:tint="#5C2E91" />
            </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="14dp"
        android:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Check In -->
        <LinearLayout
            android:id="@+id/checkInLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/checkInIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/checkin"
                android:contentDescription="Check In"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@drawable/selector" />
            <TextView
                android:id="@+id/checkInLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check In"
                android:textSize="13sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@drawable/selector"/>
        </LinearLayout>

        <!-- Salary -->
        <LinearLayout
            android:id="@+id/salaryLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/salaryIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/salary"
                android:contentDescription="Salary"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@drawable/selector" />
            <TextView
                android:id="@+id/salaryLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salary"
                android:textSize="13sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@drawable/selector"/>
        </LinearLayout>

        <!-- Home -->
        <LinearLayout
            android:id="@+id/homeLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/homeIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/home"
                android:contentDescription="Home"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@drawable/selector" />
            <TextView
                android:id="@+id/homeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="13sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@drawable/selector"/>
        </LinearLayout>

        <!-- Attendance -->
        <LinearLayout
            android:id="@+id/attendanceLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/attendanceIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/attendance"
                android:contentDescription="Attendance"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@drawable/selector" />
            <TextView
                android:id="@+id/attendanceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attendance"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@drawable/selector"/>
        </LinearLayout>

        <!-- Requests -->
        <LinearLayout
            android:id="@+id/requestsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/requestsIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/requests"
                android:contentDescription="Requests"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@drawable/selector" />
            <TextView
                android:id="@+id/requestsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Requests"
                android:textSize="13sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@drawable/selector"/>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

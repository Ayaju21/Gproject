<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/top_bar_gradient">

    <!-- Top Bar Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="30dp">

        <!-- Left Side: Hamburger Menu and Dashboard Text -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="start|center_vertical">

            <!-- Hamburger Menu and Dashboard Text -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="start">

                <!-- Hamburger Menu Icon -->
                <ImageView
                    android:id="@+id/menuIcon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@android:drawable/ic_menu_sort_by_size"
                    android:contentDescription="Menu Icon"
                    android:layout_marginBottom="8dp"/>

                <!-- Dashboard Text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DASHBOARD"
                    android:textSize="34sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:shadowColor="#000000"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4"/>
            </LinearLayout>

            <!-- Last Update Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LAST UPDATE 15 MARCH 2025"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#E0E0E0"
                android:layout_marginTop="15dp"/>
        </LinearLayout>

        <!-- Right Side: Profile Icon -->
        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@android:drawable/ic_menu_gallery"
            android:contentDescription="Profile"
            android:layout_gravity="end"
            android:background="@drawable/circle_background"
            android:padding="6dp"
            android:scaleType="centerCrop"
            android:clipToOutline="true" />
    </LinearLayout>

    <!-- Buttons Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#F2F2F3"
        app:cardCornerRadius="45dp"
        app:cardElevation="5dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp">

        <!-- Buttons Layout -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:columnCount="2"
            android:rowCount="2">

            <!-- Syllabus Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAttendance"
                android:layout_width="22dp"
                android:layout_height="130dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="16dp"
                android:backgroundTint="#4682B4"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Attendance"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="10dp"
                tools:ignore="DuplicateIds" />

            <!-- Attendance Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSalary"
                android:layout_width="20dp"
                android:layout_height="130dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="Salary"
                android:backgroundTint="#4682B4"
                android:textColor="#FFFFFF"
                app:cornerRadius="10dp"
                android:gravity="center"
                android:layout_margin="16dp"
                android:textSize="18sp"
                android:textStyle="bold"

                android:fontFamily="sans-serif"/>

            <!-- Home Work Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLeave"
                android:layout_width="20dp"
                android:layout_height="130dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="Leave Requests"
                android:backgroundTint="#4682B4"
                android:textColor="#FFFFFF"
                app:cornerRadius="10dp"
                android:gravity="center"
                android:layout_margin="16dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"/>

            <!-- Result Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOver"
                android:layout_width="20dp"
                android:layout_height="130dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="Overtime Requests"
                android:backgroundTint="#4682B4"
                android:textColor="#FFFFFF"
                app:cornerRadius="10dp"
                android:gravity="center"
                android:layout_margin="16dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"/>
        </GridLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>